@import 'react-mde-all.css'

:local(.container)
  padding 20px 30px
  margin-bottom 50px
  +mobile()
    flex-direction column
    margin-bottom 0
  .boxes-in-right
    margin-top 40px
    margin-left 20px
    width 300px
    +mobile()
        width auto
        margin-top 20px
        margin-left 0

:local(.notifications),
:local(.groupcard)
  shadow()
  margin-bottom 10px
  background-color #fff
  border-radius 3px
  transition box-shadow 0.3s ease-in-out
  +mobile()
    margin-bottom 20px
  &:hover
    $shadow_2()

:local(.notifications)
  margin-bottom 0
  min-height 300px
  +mobile()
    margin-bottom 20px

:local(.groupcard)
    min-height 250px


:local(.postsection)
   min-height fit-content
  .post-group
      margin 5px
      +mobile()
        margin 0
      .date-area
          color #9B9B9B
          font-weight 600
          margin-bottom 10px
      .ui-post-group-card
          background-color #fff
          shadow()
          .post
              position relative
              margin 10px 30px
              &:before
                  display block
                  content ''
                  absolute left -7px top 12px
                  height 12px
                  width 12px
                  border-radius 50%
              &:after
                  display block
                  content ''
                  absolute left -2px top 24px bottom -22px
                  width 2px
                  background-color #E9E9E9
              &:last-child
                  &:after
                      display none
              &:nth-child(n)
                  &:before
                      background-color #50E3C2
              &:nth-child(2n)
                  &:before
                      background-color #F39C12
              &:nth-child(3n)
                  &:before
                      background-color #9AB3EF
  .post
      .header
          padding 0 0 0 20px
          color #9B9B9B
          margin-bottom 5px
          display flex
          align-items center
          .avatar
              width 30px
              height 30px
              border-radius 50%
              background-color #9B9B9B
          .info
              margin-left 5px
              font-size 12px
              line-height 1.5
              display flex
              flex-direction column
              .username
                  font-weight bold
          .status
              padding 0 10px
              background-color color_red500
              border-radius 3px
              color #fff
          .actions
              margin-left 10px
              i
                  cursor pointer
              .dropdown-menu
                  top 0
                  left auto
                  right 10px
      .content
          padding 10px 30px
          color #9B9B9B
          +mobile()
            padding 0
          h1, h2, h3, p
              margin 10px 0
              color #9B9B9B
          h1
              font-size 25px
              &:first-of-type
                  position relative
                  text-align center
          h2
              font-size 20px
          h3
              font-size 18px
          img
              display block
              max-width 100%
              max-height 200px
          ul, ol
            padding 0
            margin 0 15px
      .footer
          display flex
          align-items center
          margin-top 5px
          padding 0 0 0 20px
          color #9B9B9B
          .social-buttons
              font-size 18px
              i
                  margin 0 5px
          .comment-count
              p
                  margin 0
  .post-modal
      .header
          padding 0
      .content
          padding 0
      .footer
          padding 0
          .comment-box
              flex 1
              .comment
                   background-color #F7F7F7
                   display flex
                   padding 10px
                   border-top 1px solid #E9E9E9
                   .avatar
                          width 30px
                          height 30px
                          border-radius 50%
                          flex 0 0 auto
                   .content
                        flex 1
                        .text,
                        .username
                            margin 0 10px
                            line-height 1.2
                        .username
                            font-weight bold
                            color #4F4F4F
                    .status
                        margin-right 5px
                        cursor pointer
                    .comment-input-box
                       flex 1
                       margin-left 10px
                       position relative
                       .comment-input
                           width 100%
                           height 30px
                           background-color #E9E9E9
                           padding 0 5px
                           font-size 12px
                           box-shadow none
                           &:focus
                               outline none
                               box-shadow none
                        i
                            absolute right 5px top 8px
                            cursor pointer
  .ui-post-editor
       fixed right 385px bottom 65px
       +mobile()
          right 40px
      .editor-area
          width 700px
          background-color #fff
          display none
          border-radius 3px
          +mobile()
            width 300px
          &.visible
              display block
              animation fadeIn 0.3s
          $shadow_2()
          .mde-header
              height 70px
              padding 5px
              background-color rgba(#00bcd4, 0.85)
              border-radius 3px 3px 0 0
              .mde-header-group
                  margin-top 30px
                  +mobile()
                    margin-right 0
                  .mde-header-item
                      button
                          color #fff
                          margin 0 10px
                          +mobile()
                            margin 0 3px
                  .mde-dropdown-header-item
                      button
                          color #878787
      .mde-text
          textarea
              height 200px
              resize none
              border-radius 0
              border none
              box-shadow none
              background-color #fff
              &:focus
                  box-shadow none
                  outline none
      .mde-preview
          .mde-preview-content
              height 200px
              overflow auto
              border none
      .action-buttons
          height 50px
          padding 5px
          background-color rgba(#00bcd4, 0.85)
          text-align right
          .preview-btn,
          .post-btn
              font-size 20px
              border none
              background-color transparent
              color #fff
              &:focus
                  outline none
          .preview-btn
              margin-right 5px
      .add-post-btn
          margin-top 10px
          float right
          background-color color_blue400
          color #fff
          border none
          width 50px
          height 50px
          border-radius 50%
          line-height 1
          $shadow_1()
          transition box-shadow 0.3s ease-in-out
          &.editor-visible
            background-color color_red400
          &:focus
            outline none
          &:hover
            $shadow_2()


:local(.groupcard)
  color #4a4a4a
  overflow hidden
  display flex
  flex-direction column
  +mobile()
    display none
  &:hover
    .group-header-image
      transform scale(1.2)

  .card-inner
    flex 1
    position relative
  .card-header
    height 100px
    position relative
    border-width 0 0 1px
    padding 10px 20px
    color #fff
    overflow hidden
    .group-header-image
      absolute top left
      width 100%
      height 100%
      background-size 100% 100px
      background-repeat no-repeat
      opacity 0.3
      transition transform 0.5s
    .group-info
      position absolute
    .name
      font-size 20px
      font-weight font_light
    .category
      font-size 14px
      font-weight font_bold
      white-space pre-line
    &::before
      background-color color_cyan500
      opacity 0.85
      content ''
      display block
      height 100%
      width 100%
      absolute top right
  .card-circle-image
    width 92px
    height 92px
    background-color #e2e2e2
    background-position center
    background-repeat no-repeat
    position absolute
    left 50%
    margin-left -46px
    top 50px
    border-radius 50%
    border 2px #fff solid
    text-align center

  .card-body
    text-align center
    padding-top 46px
    h6
      font-size 16px
      font-weight font_bold
      margin-bottom 0
    p
      margin-top 0
      font-size 14px
      padding 0 20px
      overflow hidden

  .group-type-art
    .card-header
      &::before
        background-color color_blue500
  .group-type-activist
    .card-header
      &::before
        background-color color_amber500
  .group-type-political
    .card-header
      &::before
        background-color color_green500
  .group-type-news
    .card-header
      &::before
        background-color color_teal500
  .group-type-business
    .card-header
      &::before
        background-color color_blueGrey500
  .group-type-government
    .card-header
      &::before
        background-color color_brown500
  .group-type-blog
    .card-header
      &::before
        background-color color_orange500
  .group-type-nonprofit
    .card-header
      &::before
        background-color color_deepPurple500
