:local(.container)
    width 200px
    background #EEE
    display none
    &.is-visible
        display block
    .ribbon
        absolute top -10px left -10px
        z-index 1
        overflow hidden
        width 75px 
        height 75px
        text-align right
        span
            font-size 12px
            font-weight bold
            color #FFF
            text-transform uppercase
            text-align center
            line-height 20px
            transform rotate(-45deg)
            -webkit-transform rotate(-45deg)
            width 100px
            display block
            background theme_primary
            box-shadow 0 3px 10px -5px rgba(0, 0, 0, 1)
            position absolute
            top 19px
            left -21px
